{
    "class": "ADC",
    "schemaVersion": "3.26.0",
    "id": "LTM_VIP_AWAF",
    "Tenant_1": {
        "class": "Tenant",
        "A1": {
            "class": "Application",
            "template": "http",
            "serviceMain": {
                "class": "Service_HTTP",
                "virtualAddresses": [
                    "0.0.0.0"
                ],
                "policyWAF": {
                    "use": "wafPolicy"
                },
                "pool": "web_pool"
            },
            "web_pool": {
                "class": "Pool",
                "monitors": [
                    "http"
                ],
                "members": [{
                    "servicePort": 80,
                    "serverAddresses": [
                       "${juice_shop_ip}"
                    ]
                }]
            },
            "wafPolicy": {
                "class": "WAF_Policy",
                "url": "https://raw.githubusercontent.com/f5devcentral/f5-asm-policy-templates/v1.1/generic_ready_template/Rapid_Depolyment_Policy_13_1.xml",
                "enforcementMode": "blocking",
                "ignoreChanges": true
            }
        }
    }
}